{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "FileUploadSettings": {
    "MaxFileSize": 10485760, // 10MB в байтах
    "AllowedExtensions": [ ".jpg", ".jpeg", ".png", ".gif", ".pdf", ".doc", ".docx", ".txt" ],
    "UploadPath": "wwwroot/uploads",
    "CleanPath": "wwwroot/clean",
    "QuarantinePath": "wwwroot/quarantine"
  },
  "ClamAVSettings": {
    "Server": "localhost",
    "Port": 3310
  }
  // "VirusTotalSettings": {
  //   "ApiKey": "your_api_key_here"
  // }
}